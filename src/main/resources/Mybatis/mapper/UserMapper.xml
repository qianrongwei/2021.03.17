<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qrw.mapper.UserMapper">

    <resultMap id="userMap" type="com.qrw.pojo.User">
        <id column="id" property="id"></id>
        <result column="account_id" property="accountId"></result>
        <result column="name" property="name"></result>
        <result column="bio" property="bio"></result>
        <result column="token" property="token"></result>
        <result column="gmt_create" property="gmtCreate"></result>
        <result column="gmt_modified" property="gmtModified"></result>
        <result column="avatar_url" property="avatarUrl"></result>
    </resultMap>

    <select id="getUsersByIds" parameterType="java.util.List" resultMap="userMap">
        select * from user
        where id in
        <foreach collection="list" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>